{
  "manifest_version": 3,
  "name": "Media Buyer's Toolkit",
  "version": "1.0.0",
  "description": "A comprehensive toolkit for media buyers with TikTok Ads CTA automation and YouTube Studio batch publishing features",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://ads.tiktok.com/*",
    "https://studio.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Media Buyer's Toolkit",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://ads.tiktok.com/*"],
      "js": ["content-scripts/tiktok-automation.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://studio.youtube.com/*"],
      "js": ["content-scripts/youtube-publisher.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
